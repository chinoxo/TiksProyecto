<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D4E6"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtMessage"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="378dp"
        android:layout_height="315dp"
        android:fontFamily="sans-serif-black"
        android:hint="Enter You Message"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:text="Soporte"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtMessage"
        app:layout_constraintEnd_toEndOf="@+id/txtMessage"
        app:layout_constraintStart_toStartOf="@+id/txtMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="103dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnPublish"
            style="@android:style/Widget.Button"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_below="@id/txtMessage"
            android:layout_centerHorizontal="true"
            android:background="#CDC7DD"
            android:gravity="center"
            android:text="Publish"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnclear"
            style="@android:style/Widget.Button"
            android:layout_width="206dp"
            android:layout_height="103dp"
            android:layout_below="@id/txtMessage"
            android:layout_centerHorizontal="true"
            android:background="#CDC7DD"
            android:gravity="center"
            android:text="Clear"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnvolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D9D4E6"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>